<%- include('partials/header.ejs') %>
<h2 class="text-center">Account</h2>

<form method="POST" action="/account/edit" class="px-4"> 
  <div class="form-group">
    <label for="email">Email</label>
    <input type="email" class="form-control" name="email" value="<%=accountInfo[0].username%>" disabled>
  </div>
  <div class="form-group">
    <label for="fName">First Name</label>
    <input type="text" class="form-control" name="fName" value="<%=accountInfo[0].firstName%>">
  </div>
  <div class="form-group">
    <label for="lName">Last Name</label>
    <input type="text" class="form-control" name="lName" value="<%=accountInfo[0].lastName%>">
  </div>
<% if (typeof payment[0] != "undefined"){ %>
  <div class="form-group">
    <label for="cardNum">Card Number</label>
    <input type="number" class="form-control" name="cardNum" value="<%=payment[0].cardNumber%>">
  </div>
  <div class="form-group">
    <label for="exp">Card Expiration</label>
    <input type="text" class="form-control" name="exp" value="<%=payment[0].expiration%>">
  </div>
  <div class="form-group">
    <label for="nameOnCard">Name on Card</label>
    <input type="text" class="form-control" name="nameOnCard" value="<%=payment[0].nameOnCard%>">
  </div>
  <div class="form-group">
    <label for="zip">Zip Code</label>
    <input type="number" class="form-control" name="zip" value="<%=payment[0].zipCode%>">
  </div>
<% } %>
<button class="btn btn-primary">Update Account</button>
</form><br><br>

<form method="POST" action="/account/password" class="px-4"> 
  <div class="form-group">
    <label for="password">Password</label>
    <input type="password" class="form-control" name="password"/>
  </div>
<button class="btn btn-primary">Change Password</button>
</form>

<%- include('partials/footer.ejs') %>